---
import { Icon } from 'astro-icon'
---

<div class="max-w-screen-xl mx-auto my-24 px-5">
  <div class="flex flex-col md:flex-row md:space-x-6 justify-center gap-4 items-center" id="widget">
    <div
      class="flex h-64 w-64 flex-col items-center justify-center rounded-lg bg-white"
    >
      <div class="flex flex-col space-x-2">
        <div class="text-center text-4xl font-bold">+3</div>
        <div class="my-2 text-center text-gray-500">Years of experience</div>
        <Icon class="h-10 md:h-6 mt-2 text-orange-900" name="mdi:briefcase" />
      </div>
    </div>
    <div
      class="flex h-64 w-64 flex-col items-center justify-center rounded-lg bg-white"
    >
      <div class="flex flex-col space-x-2">
        <div class="text-center text-4xl font-bold">+15</div>
        <div class="my-2 text-center text-gray-500">Projects completed</div>
        <Icon class="h-10 md:h-6 mt-2" name="mdi:firework" />
      </div>
    </div>
    <div
      class="flex h-64 w-64 flex-col items-center justify-center rounded-lg bg-white"
    >
      <div class="flex flex-col space-x-2">
        <div class="text-center text-4xl font-bold">+5</div>
        <div class="my-2 text-center text-gray-500">Companies worked</div>
        <Icon class="h-10 md:h-6 mt-2 text-red-600" name="mdi:cards-heart" />
      </div>
    </div>
  </div>
</div>
